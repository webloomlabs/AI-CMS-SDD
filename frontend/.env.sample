# ================================
# AI-Native CMS Frontend Environment Configuration
# ================================
# Copy this file to .env and update with your values
# NEVER commit .env to version control

# ================================
# API CONFIGURATION
# ================================
# Backend API base URL
# Required: YES
# Format: Full URL to backend API (do NOT include trailing slash)
# Development: http://localhost:3001
# Production: https://api.yourdomain.com or https://yourdomain.com/api
# Note: Must include protocol (http:// or https://)
REACT_APP_API_URL=http://localhost:3001

# ================================
# REACT APP CONFIGURATION
# ================================
# Note: All environment variables in React must start with REACT_APP_
# otherwise they will be ignored by Create React App

# Development server port
# Required: NO (default: 3000)
# Range: 1024-65535
# Note: Will auto-increment if port is in use
PORT=3000

# Automatically open browser on server start
# Required: NO (default: true)
# Values: true | false | none
# Set to "none" to disable browser opening
BROWSER=true

# Enable HTTPS in development
# Required: NO (default: false)
# Values: true | false
# Note: Requires SSL certificate (see CRA docs)
HTTPS=false

# ================================
# BUILD CONFIGURATION
# ================================
# Public URL for production build
# Required: NO (default: / for relative paths)
# Production: Set to your domain or CDN URL
# Examples:
# - https://yourdomain.com
# - https://cdn.yourdomain.com
# - /app (if hosting in subdirectory)
# PUBLIC_URL=/

# Build source maps in production
# Required: NO (default: true)
# Values: true | false
# Production: Set to "false" to reduce bundle size and improve security
# GENERATE_SOURCEMAP=true

# ================================
# DEBUGGING & DEVELOPMENT
# ================================
# Enable debug mode (custom logging)
# Required: NO (default: false)
# Values: true | false
# Development: Can enable for verbose logging
REACT_APP_DEBUG=false

# Disable chunk splitting in development
# Required: NO (default: false)
# Values: true | false
# Use if experiencing development build issues
# INLINE_RUNTIME_CHUNK=false

# Show bundle analyzer
# Required: NO
# Values: true | false
# Development: Analyze bundle size
# REACT_APP_BUNDLE_ANALYZE=false

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable features without code changes
# Custom feature flags (examples):

# Enable AI content generation features
# Required: NO (default: true if backend supports it)
# Values: true | false
REACT_APP_ENABLE_AI=true

# Enable dark mode toggle
# Required: NO (default: true)
# Values: true | false
# REACT_APP_ENABLE_DARK_MODE=true

# ================================
# ANALYTICS & MONITORING
# ================================
# Google Analytics tracking ID
# Required: NO
# Format: G-XXXXXXXXXX or UA-XXXXXXXXX-X
# Get from: https://analytics.google.com
# REACT_APP_GA_TRACKING_ID=""

# Sentry DSN for error tracking
# Required: NO
# Get from: https://sentry.io
# REACT_APP_SENTRY_DSN=""

# ================================
# PRODUCTION CHECKLIST
# ================================
# Before deploying to production, ensure:
# [ ] REACT_APP_API_URL points to production backend
# [ ] PUBLIC_URL is set to production domain (if needed)
# [ ] GENERATE_SOURCEMAP is false (security)
# [ ] REACT_APP_DEBUG is false
# [ ] Analytics/monitoring IDs are set (if using)
# [ ] Run production build: npm run build
# [ ] Test production build locally: npx serve -s build
# [ ] Check bundle size: npm run build (should see size report)

# ================================
# DOCKER-SPECIFIC NOTES
# ================================
# When building with Docker:
# 1. Environment variables must be set at BUILD time (in Dockerfile)
# 2. Use ARG in Dockerfile to pass build-time variables:
#    ARG REACT_APP_API_URL
#    ENV REACT_APP_API_URL=$REACT_APP_API_URL
# 3. Or use build args: docker build --build-arg REACT_APP_API_URL=...
# 4. Runtime environment variables don't work for React apps (bundled at build)

# ================================
# ADDITIONAL NOTES
# ================================
# 1. Create React App documentation: https://create-react-app.dev/docs/adding-custom-environment-variables
# 2. Only REACT_APP_* variables are embedded into the build
# 3. Variables are embedded at BUILD time, not runtime
# 4. Never store secrets in REACT_APP_* variables (they're public in bundle)
# 5. Restart dev server after changing .env
# 6. Changes to .env require rebuilding for production

